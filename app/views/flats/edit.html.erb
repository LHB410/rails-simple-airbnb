<div class= "container">
  <h1 class= "title"> Edit Flat </h1>
  <div class= "my-3">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name  %>
      <%= f.input :address %>
      <%= f.input :description, as: :text %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Update Flat", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back", flats_path %>
  </div>
</div>
