<div class= "container">
  <div class= "my-3">
    <h1 class= "title">Add a new flat</h1>
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name  %>
      <%= f.input :address %>
      <%= f.input :description, as: :text %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Add new Flat", class: "btn btn-primary btn-lg" %>
    <% end %>
    <%= link_to "Back", flats_path, class: "link" %>
  </div>
</div>
